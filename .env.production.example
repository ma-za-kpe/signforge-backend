# Production Environment Variables for Backend
# Copy this file to .env.production and fill in your values

# API Configuration
API_ENV=production
PORT=8080

# CORS - Update with your Vercel frontend URL
CORS_ORIGINS=https://your-frontend.vercel.app

# Brain/Storage Paths (Railway persistent volume)
FAISS_INDEX_PATH=/app/ghsl_brain/vectors.index
BRAIN_DIR=/app/ghsl_brain

# File Storage Directories
TEMP_STORAGE_DIR=/app/ghsl_brain/temp_generated
MISSING_WORDS_DIR=/app/ghsl_brain/missing_words
GENERATED_FORMATS_DIR=/app/ghsl_brain/generated_formats

# Temporary Storage TTL (10 minutes default)
TEMP_TTL_MINUTES=10

# Optional: API Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# Optional: Logging
# LOG_LEVEL=INFO
